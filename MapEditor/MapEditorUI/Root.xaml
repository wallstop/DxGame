<ek:UIRoot x:Class="MapEditorUILibrary.Root"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ek="clr-namespace:EmptyKeys.UserInterface.Designer;assembly=EmptyKeys.UserInterface.Designer"
        xmlns:c="clr-namespace:EmptyKeys.UserInterface.Designer.Charts;assembly=EmptyKeys.UserInterface.Designer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapEditorUILibrary"
        mc:Ignorable="d" Height="350" Width="604">
    <ek:UIRoot.Background>
        <SolidColorBrush Opacity="0" />
    </ek:UIRoot.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.InputBindings>
            <MouseBinding MouseAction="LeftClick" Command="{Binding PlaceTileCommand}" />
        </Grid.InputBindings>
        <!--<Canvas Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="5,5,5,5" Opacity=".7"> -->
        <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Margin="5,5,5,5" Opacity="0.95">
            <TabControl >
                <TabItem Header="Block">
                    <ListBox Name="blockData" ItemsSource="{Binding Blocks}" SelectedItem="{Binding Mode=OneWayToSource, Path=SelectedTile}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Tile}" MaxHeight="50" MinHeight="50" MaxWidth="50" MinWidth="50">
                                </Image>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
                <TabItem Header="Platform">
                    <ListBox Name="platformData" ItemsSource="{Binding Platforms}" ek:DragDrop.IsDragSource="True" ek:DragDrop.IsDropTarget="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Tile}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </TabItem>
            </TabControl>
            <StackPanel Orientation="Vertical">
                <Button Content="Load" Command="{Binding LoadCommand}" />
                <Button Content="Delete" Command="{Binding DeleteCommand}"/>
                <ContentControl Content="{Binding SelectedTile}" />
            </StackPanel>
        </StackPanel>
        <!--</Canvas>-->
    </Grid>
</ek:UIRoot>

